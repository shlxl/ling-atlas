{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ling Atlas Collections Templates",
  "type": "object",
  "additionalProperties": false,
  "required": ["templates"],
  "properties": {
    "$schema": { "type": "string" },
    "templates": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "defaults": { "$ref": "#/definitions/templateDefaults" },
          "aggregates": {
            "type": "object",
            "additionalProperties": { "$ref": "#/definitions/templatePartial" }
          }
        },
        "required": ["defaults"]
      }
    }
  },
  "definitions": {
    "templateDefaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "markdown": { "type": "string" },
        "item": { "type": "string" },
        "itemSeparator": { "type": "string" },
        "placeholders": { "$ref": "#/definitions/placeholders" },
        "sort": { "$ref": "#/definitions/sortRules" }
      },
      "required": ["markdown", "item"]
    },
    "templatePartial": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "markdown": { "type": "string" },
        "item": { "type": "string" },
        "itemSeparator": { "type": "string" },
        "placeholders": { "$ref": "#/definitions/placeholders" },
        "sort": { "$ref": "#/definitions/sortRules" }
      }
    },
    "placeholders": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "field": { "type": "string", "minLength": 1 },
          "fields": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "format": { "type": "string" },
          "whenEmpty": { "type": "string" }
        },
        "required": ["format"],
        "anyOf": [
          { "required": ["field"] },
          { "required": ["fields"] }
        ]
      }
    },
    "sortRules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["fields"],
        "properties": {
          "fields": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "order": { "type": "string", "enum": ["asc", "desc"] }
        }
      }
    }
  }
}
