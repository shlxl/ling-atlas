{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/frontmatter.schema.json",
  "title": "Frontmatter",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "date",
    "category_zh"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "review",
        "published"
      ]
    },
    "category_zh": {
      "type": "string",
      "enum": [
        "工程笔记",
        "架构设计",
        "Web前端",
        "后端",
        "数据工程",
        "数据库",
        "信息检索",
        "RAG实战",
        "AI研究",
        "大模型",
        "机器学习",
        "深度学习",
        "运维与自动化",
        "网络与安全",
        "云与边缘",
        "管理与协作",
        "职业攻略",
        "读书笔记",
        "生活随笔",
        "公共治理观察",
        "行政信息化"
      ]
    },
    "tags_zh": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "series": {
      "type": "string"
    },
    "series_slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "cover": {
      "type": "string"
    },
    "excerpt": {
      "type": "string"
    }
  },
  "x-schema-version": "1.0.0"
}
